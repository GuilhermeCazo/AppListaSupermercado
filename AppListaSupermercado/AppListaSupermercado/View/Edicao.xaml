<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.Edicao">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>

            <Label Text="Descrição:" />
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}" />

            <Label Text="Quantidade:" />
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" />

            <Label Text="Preço:" />
            <Entry x:Name="txt_preco_unico" Text="{Binding Preco_Unico}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
